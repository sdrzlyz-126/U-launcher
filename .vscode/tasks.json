{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "pylint",
      "type": "shell",
      "command": "docker exec ulauncher bash -c 'PYTHONPATH=/root/ulauncher py.test --pep8 -x \"$(echo ${file} | sed \"s|/.*tests|tests|g\")\"'",
      "group": "ulauncher",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": true
      }
    }
  ]
}
